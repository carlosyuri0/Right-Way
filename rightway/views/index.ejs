    <main>
        <div class="wrapper">
            <div class="texto-ini">
                <h1 class="titulo1">Sejam Bem-Vindos!</h1>
            </div>
            <div class="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item">
                        <img src="img/foto1.png" alt="Image 1">
                    </div>
                    <div class="carousel-item">
                        <a href="/vestibulares"><img src="img/foto3.png" alt="Image 2"></a>
                    </div>
                    <div class="carousel-item">
